# Backend Environment Variables (.env)
# Copy this file to server/.env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/foodloops

# Civic Auth Configuration
CIVIC_CLIENT_ID=584fc3e9-922e-4b13-95af-cd0a9ea42ba2

# CORS Configuration
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Configuration (if needed for additional security)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# API Configuration
API_VERSION=v1
API_PREFIX=/api 